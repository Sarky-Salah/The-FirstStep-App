<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Thefirststep" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> --> <!-- Backgrounds -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Toolbar / AppBar text and icon color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:icon">@color/white</item>

        <!-- Other surfaces -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Text -->
        <item name="android:textColor">@color/white</item>

        <!-- FAB -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Optional: enable Material You animations -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>

    </style>

    <style name="Theme.Thefirststep" parent="Base.Theme.Thefirststep" />
</resources>